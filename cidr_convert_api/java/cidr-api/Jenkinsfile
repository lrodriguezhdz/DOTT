        stage("build & SonarQube analysis") {
            agent any
            steps {
              withSonarQubeEnv(credentialsId: 'f225455e-ea59-40fa-8af7-08176e86507a', installationName:'Sonar') {
               // sh 'dir(cidr_convert_api/java/cidr-api)'
              //  sh 'mvn -f cidr_convert_api/java/cidr-api/pom.xml  sonar:sonar'
               sh 'mvn cidr_convert_api/java/cidr-api/pom.xml org.sonarsource.scanner.maven:sonar-maven-plugin:3.6.0.1398:sonar'
               // sh 'mvn -f cidr_convert_api/java/cidr-api/ org.sonarsource.scanner.maven:sonar-maven-plugin:4.7.0.2747:sonar'
